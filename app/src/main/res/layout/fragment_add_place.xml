<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AddPlaceDialogFragment">

    <!-- 제목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- 닫기 버튼 -->
        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_close">
        </ImageButton>

        <!-- 내 장소 추가 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:fontFamily="@font/nanumsquareroundb"
            android:gravity="center"
            android:text="내 장소 추가"
            android:textSize="20sp" />

        <!-- 체크 버튼 -->
        <ImageButton
            android:id="@+id/submitBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_check">
        </ImageButton>
    </LinearLayout>

    <!-- 하단 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:orientation="vertical">

        <!-- 장소 이름 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundr"
            android:text="장소 이름"
            android:textColor="@color/gray3"
            android:textSize="13sp">
        </TextView>

        <!-- 장소이름을 입력하세요 -->
        <EditText
            android:id="@+id/placename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:hint="장소 이름을 입력하세요"
            android:inputType="text"
            android:textColor="@color/gray2"
            android:background="@drawable/textstyle3"
            android:fontFamily="@font/nanumsquareroundb"
            android:textSize="15sp">
        </EditText>

        <!-- 위치 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nanumsquareroundr"
            android:text="위치"
            android:textColor="@color/gray3"
            android:textSize="13sp">
        </TextView>

        <!-- 주소를 입력하세요 -->
        <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/textstyle3"
                android:drawableStart="@drawable/search_resize"
                android:drawablePadding="10dp"
                android:fontFamily="@font/nanumsquareroundb"
                android:inputType="text"
                android:padding="15dp"
                android:hint="주소를 입력하세요"
                android:textColor="@color/gray2"
                android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>